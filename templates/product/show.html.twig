{% extends 'base.html.twig' %}


{% block title %}{{ product.name }} - La Boutique d'Anso{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5 my-auto">
            <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto ">
                <h3>{{ product.name }}</h3>
                <p>{{ product.subtitle }}</p>
                <span class="product-page-price"><strong>{{ (product.price /100)| number_format(2, ',','.')}} €</strong></span>
                <hr>
                <p>{{ product.description }}</p>
                <hr>
                <a href="{{ path('add_to_cart', {'id' : product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>
    <hr>
    <h3><strong>Nos meilleurs ventes</strong></h3>
    <p>Découvrez nos articles les plus vendus.</p>
    <div class="row">
        {% for product in products  %}
            <div class="col-md-3">
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
